<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SoundBased" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- secondary brand color -->
        <item name="colorSecondary">@color/green_dark</item>
        <item name="colorSecondaryVariant">@color/very_gray_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="colorSurface">@color/white</item>

        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SoundBased" parent="Base.Theme.SoundBased" />
</resources>